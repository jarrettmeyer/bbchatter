<div id="chatroom">
	<div id="chatroom-header">
		<div id="chatroom-name"></div>
		<div id="chatroom-key"></div>
		<div id="goto-about">
			<%= link_to about_path do %>
				<%= image_tag "information.png" %>
				About
			<% end %>
		</div>
	</div>
	<div id="chatroom-window">
		<div id="messages"></div>
	</div>
	<div id="chatroom-footer">
		<form id="chatter-form">
			<textarea id="message-text" name="message-text"></textarea>
			<button type="submit">
				Submit
			</button>
		</form>
	</div>

	<div id="overlay">
		<div class="overlay-content">
			<div>
				<label for="display_name">Your Name</label>
				<input type="text" name="display_name" id="display_name"/>
			</div>
			<div>
				<label class="radio">
					<input type="radio" name="room_type" id="room_type_join" value="join"/>
					Join an existing chatroom
				</label>
				<label class="radio">
					<input type="radio" name="room_type" id="room_type_create" value="create"/>
					Create a new chatroom
				</label>
			</div>
			<div id="room_key_fields" style="display:none;">
				<label for="room_key">Room Key</label>
				<input type="text" id="room_key" name="room_key"/>
			</div>
			<div id="room_name_fields" style="display:none;">
				<label for="room_name">Room Name</label>
				<input type="text" id="room_name" name="room_name"/>
			</div>
			<div>
				<button type="button" id="start-chatting">
					Start Chatting
				</button>
			</div>
		</div>
	</div>

</div>

<script type="text/template" id="message-template">
	<div class="message-header">
    <%%- display_name %> [<%%- timestamp %>]
  </div>
  <div class="message-body">
    <%%- text %>
  </div>
</script>

